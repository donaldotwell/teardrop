APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=shopify
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"


# Bitcoin RPC Configuration
BITCOIN_RPC_SCHEME=http
BITCOIN_RPC_HOST=localhost
BITCOIN_RPC_PORT=8332
BITCOIN_RPC_USER=your_rpc_username
BITCOIN_RPC_PASSWORD=your_rpc_password

# Bitcoin Network Settings
BITCOIN_NETWORK=testnet
BITCOIN_CONFIRMATIONS_REQUIRED=6
BITCOIN_MIN_DEPOSIT=0.0001

# Wallet Settings
BITCOIN_WALLET_PREFIX=user_
BITCOIN_AUTO_GENERATE_ADDRESSES=true
BITCOIN_ADDRESS_GAP_LIMIT=20

# Sync Settings
BITCOIN_SYNC_INTERVAL=60
BITCOIN_SYNC_ENABLED=true
BITCOIN_SYNC_BATCH_SIZE=100

# Fee Configuration
VENDOR_CONVERSION_FEE_USD=1000
ORDER_COMPLETION_FEE_PERCENT=3
ADMIN_BTC_WALLET_NAME=admin
ADMIN_XMR_WALLET_NAME=admin_xmr

# Monero Wallet RPC Configuration
MONERO_RPC_SCHEME=http
MONERO_RPC_HOST=localhost
MONERO_RPC_PORT=28084
MONERO_RPC_USER=monero
MONERO_RPC_PASSWORD=your_rpc_password

# Monero Master Wallet (Subaddress Architecture)
# All users share one master wallet with unique subaddresses
MONERO_MASTER_WALLET_NAME=teardrop_master
MONERO_MASTER_WALLET_PASSWORD=your_master_wallet_password

# Monero Wallet Settings
MONERO_WALLET_DIR=/path/to/monero/wallets
MONERO_WALLET_PASSWORD=QWERTY12345

# Monero Sync Settings
MONERO_SYNC_ENABLED=true
MONERO_SYNC_INTERVAL=60

# Monero Network Settings
MONERO_MIN_CONFIRMATIONS=10
MONERO_NETWORK=testnet
